    </LinearLayout>

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

<!--        Login Bonus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_login_bonus"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Login Bonus"
                android:textColor="@color/Black" />

            <Button
                android:id="@+id/btn_login_bonus"
                android:layout_width="15dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".25"
                android:background="@drawable/container_round_corner"
                android:padding="2dp"
                android:paddingLeft="2dp"
                android:text="Get"
                android:textColor="@color/Black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/buttonBackground" />

        <!--        Time Spent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_spent"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Time Spent"
                android:textColor="@color/Black" />

            <Button
                android:id="@+id/btn_time_spent"
                android:layout_width="15dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_weight=".25"
                android:background="@drawable/container_round_corner"
                android:padding="2dp"
                android:paddingLeft="2dp"
                android:text="Get"
                android:textColor="@color/Black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/buttonBackground" />

        <!--        Invite new friends -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_invite_new_friends"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Invite New Friends\nEarn +50000 coins."
                android:textColor="@color/Black" />

            <Button
